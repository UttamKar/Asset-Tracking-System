@model ATS.Models.Models.EntityModel.Location

@{
    ViewBag.Title = "Details";
}


<h2 class="text-center">Location Details</h2><hr />


<div class="container-fluid">
    <div class="form-horizontal">
        <div class="panel panel-primary">
            <div class="panel panel-heading">Location</div>
            <div class="panel-body">
                <h3><b>Location: @Model.Name</b></h3>
                <hr />

                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            Branch
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Branch.Name)
                        </dd>

                        <dt>
                            Location
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            Short Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ShortName)
                        </dd>

                        <dt>
                            Organization
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.OrganizationId)
                        </dd>

                    </dl>
                    <hr />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            @Html.ActionLink("Edit", "Edit", "Locations", new { id = Model.Id }, new { @class = "btn btn-success" }) |
                            @Html.ActionLink("Back to Location List", "Index")
                        </div>
                    }
                    <br />
                </div>

            </div>
        </div>
    </div>
</div>



