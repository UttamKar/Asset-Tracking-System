@model IEnumerable<ATS.Models.Models.EntityModel.AssetEntry>

@{
    ViewBag.Title = "Index";
}



<div class="container-fluid">
    <br />
    <div class="panel panel-primary">
        <div class="panel panel-heading">Asset List</div>
        <div class="panel-body">
            <div align="right">
                @Html.ActionLink("Create New", "Create", "AssetEntries", new { @class = "btn btn-success" })
            </div>
            <hr />
            <div>
                <table class="table table-striped table-hover table-bordered text-center">
                    <tr style="background-color: lightgreen; color: white">
                        <th>#</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Brand)
                        </th>
                        @*<th>
                            Serial No.
                        </th>
                        <th>
                            Description/Name
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.AssetModel.Name)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Attachment)
                        </th>*@
                        <th>
                            Location
                        </th>
                        <th>
                            Branch
                        </th>
                        <th>
                            Organization
                        </th>
                        <th>
                            Manufacturer
                        </th>
                        <th>
                            Asset Group
                        </th>
                        <th>
                            Asset Type
                        </th>
                        <th>Action</th>
                    </tr>
                    @{
                        var serialNo = 0;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(++serialNo)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Brand)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.SerialNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DescriptionName)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.AssetModel.Name)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Attachment)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Location.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location.Branch.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location.Branch.Organization.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AssetModel.Manufacturer.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AssetModel.Manufacturer.AssetGroup.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AssetModel.Manufacturer.AssetGroup.AssetType.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "AssetEntries", new { id = item.Id }, new { @class = "btn btn-success btn-xs" })
                                @Html.ActionLink("Details", "Details", "AssetEntries", new { id = item.Id }, new { @class = "btn btn-info btn-xs" })
                                @Html.ActionLink("Delete", "Delete", "AssetEntries", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>




