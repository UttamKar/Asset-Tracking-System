@model ATS.Models.Models.EntityModel.AssetModel

@{
    ViewBag.Title = "Details";
}


<h2 class="text-center">Asset Model Details</h2><hr />


<div class="container-fluid">
    <div class="form-horizontal">
        <div class="panel panel-primary">
            <div class="panel panel-heading">Asset Model</div>
            <div class="panel-body">
                <h3><b>Asset Model: @Model.Name</b></h3>
                <hr />

                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            Asset Group
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Manufacturer.AssetGroup.Name)
                        </dd>

                        <dt>
                            Manufacturer
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Manufacturer.Name)
                        </dd>

                        <dt>
                            Model
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            Short Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ShortName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Code)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Code)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                    </dl>
                    <hr />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            @Html.ActionLink("Edit", "Edit", "AssetModels", new { id = Model.Id }, new { @class = "btn btn-success" }) |
                            @Html.ActionLink("Back to Asset Model List", "Index")
                        </div>
                    }
                    <br />
                </div>

            </div>
        </div>
    </div>
</div>


