@model ATS.Models.Models.ViewModel.CheckIn.CheckInCreateVm

@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Check IN</h3>
            </div>
            <div class="panel-body">
                <br />



                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <fieldset>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-12">
                                <div class="row">
                                @Html.HiddenFor(m=>m.assetIDArr)
                                    <!-- row start-->
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.EmployeeId, "Employee Name", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-4 col-sm-4">
                                            @Html.DropDownList("EmployeeId", new SelectList(Model.EmployeeLookup, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>


                                </div><!-- row end-->
                            </div>


                            <div>
                                <table class="table table-striped table-hover table-bordered table-responsive text-center">
                                    <thead>
                                        <tr style="background-color: lightgreen; color: white;">
                                            <th class="text-center"><input type="checkbox" id="ckbCheckAll"/></th>
                                            <th class="text-center">
                                                Asset No
                                            </th>
                                            <th class="text-center">
                                                Description
                                            </th>
                                            <th sclass="text-center">
                                                Due Date
                                            </th>
                                            <th class="text-center">
                                                Custodian
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody id="CheckInTable"></tbody>
                                </table>
                            </div>



                            <br />
                            <br />
                            <br />
                            <div class="col-md-12">

                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CheckInStatus, "Set Check In Status", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-4 col-sm-4">
                                            @Html.DropDownList("CheckInStatus", new List<SelectListItem>
                                                {
                                                    new SelectListItem() {Text = "Repair", Value = "Repair"},
                                                    new SelectListItem() {Text = "Damage", Value = "Damage"}
                                                }, "Select Check In Status", htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.CheckInStatus, "", new { @class = "text-danger" })
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SetLocation, "Set Location To", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-4 col-sm-4">
                                            @Html.DropDownList("SetLocation", new List<SelectListItem>
                                                {
                                                    new SelectListItem() {Text = "Wire House", Value = "Wire House"},
                                                    new SelectListItem() {Text = "Head Office", Value = "Head Office"}
                                                }, "Select Location", htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.SetLocation, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Comments, "Comments", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-4 col-sm-4">
                                            @Html.TextAreaFor(model => model.Comments, new { @rows = "4", @cols = "80", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Comments, "", new {@class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <hr />

                                <div class="row">
                                    <!-- row start-->
                                    <div class="form-group">
                                        <div class="col-md-12 col-sm-12" align="right">
                                            <input type="submit" value="Complete Check IN" class="btn btn-success" />
                                            @Html.ActionLink("Cancel", "Create", "CheckIns", new { @class = "btn btn-danger" })
                                        </div>
                                    </div>
                                </div><!-- row end-->
                            </div>

                            <div>
                                @Html.ActionLink("Back to CheckIn List", "Index")
                            </div>
                        </fieldset>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


@section scripts{
    @*<script src="~/Scripts/jquery-3.2.1.min.js"></script>*@
    <script src="~/Scripts/ATS/CheckIns.js"></script>
}