@model ATS.Models.Models.EntityModel.Branch

@{
    ViewBag.Title = "Delete";
}


<h2 class="text-center">Delete</h2>
<hr />


<div class="container-fluid">
    <div class="form-horizontal">
        <div class="panel panel-primary">
            <div class="panel panel-heading">Branch</div>
            <div class="panel-body">
                <h3>Are you sure you want to <span id="span" style="color: red"><b>Delete</b></span> this Branch permanently?</h3>
                <hr />

                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            Organization
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Organization.Name)
                        </dd>

                        <dt>
                            Branch
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            Short Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ShortName)
                        </dd>

                    </dl>
                    <hr />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            @Html.ActionLink("Back to Branch List", "Index")
                        </div>
                    }<br />
                </div>

            </div>
        </div>
    </div>
</div>



@section scripts{
    <script src="~/Scripts/ATS/Animation.js"></script>
}