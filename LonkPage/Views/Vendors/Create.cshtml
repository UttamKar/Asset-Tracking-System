@model ATS.Models.Models.ViewModel.Vendor.VendorCreateVm

@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Vendor</h3>
            </div>
            <div class="panel-body">
                <!--Form Start-->
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="col-md-12 col-sm-12 ">
                        <fieldset>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <!-- Form Name -->
                            <!-- Text input-->

                            <div class="row">
                                <!-- row start-->
                                <div class="col-md-10 col-md-offset-1 form-group">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new {@class = "col-md-2 col-sm-2 control-label"})
                                    <div class="col-md-4 col-sm-4">
                                        @Html.TextBoxFor(model => model.Name, new { id="vendorName", @class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.Name, "", new { id = "vendorNameExistenceCheck", @class = "text-danger"})
                                    </div>

                                    @Html.LabelFor(model => model.Email, htmlAttributes: new {@class = "col-md-2 col-sm-2 control-label"})
                                    <div class="col-md-4 col-sm-4">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
                                    </div>

                                </div>
                            </div><!-- row end-->

                            <div class="row">
                                <!-- row start-->
                                <div class="col-md-10 col-md-offset-1 form-group">
                                    @Html.LabelFor(model => model.ShortName, htmlAttributes: new {@class = "col-md-2 col-sm-2 control-label"})
                                    <div class="col-md-4 col-sm-4">
                                        @Html.TextBoxFor(model => model.ShortName, new {@class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.ShortName, "", new {@class = "text-danger"})
                                    </div>

                                    @Html.LabelFor(model => model.ContactNo, htmlAttributes: new {@class = "col-md-2 col-sm-2 control-label"})
                                    <div class="col-md-4 col-sm-4">
                                        @Html.TextBoxFor(model => model.ContactNo,new {@class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.ContactNo, "", new {@class = "text-danger"})
                                    </div>
                                </div>
                            </div><!-- row end-->

                            <div class="row">
                                <!-- row start-->
                                <div class="col-md-10 col-md-offset-1 form-group">
                                    @Html.LabelFor(model => model.Address, htmlAttributes: new {@class = "col-md-2 col-sm-2 control-label"})
                                    <div class="col-md-4 col-sm-4">
                                        @Html.TextAreaFor(model => model.Address, new {@class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.Address, "", new {@class = "text-danger"})
                                    </div>

                                    @Html.LabelFor(model => model.Comments, htmlAttributes: new {@class = "col-md-2 col-sm-2 control-label"})
                                    <div class="col-md-4 col-sm-4">
                                        @Html.TextAreaFor(model => model.Comments, new {@class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.Comments, "", new {@class = "text-danger"})
                                    </div>

                                </div>
                            </div><!-- row end-->

                            <hr/>
                            <div class="row">
                                <!-- row start-->
                                <div class="form-group" >
                                    <div class="col-md-10 col-md-offset-1" align="right">
                                        <input type="submit" id="Save" name="Save" class="btn btn-success" value="Save"/>
                                        @Html.ActionLink("Search", "Search", "Vendors", new { @class = "btn btn-info" })
                                        @Html.ActionLink(" Cancel", "Create", "Vendors", new { @class = "btn btn-danger" })
                                    </div>
                                </div>
                            </div><!-- row end-->
                            <div>
                                @Html.ActionLink("Back to Vendor List", "Index")
                            </div>

                        </fieldset>
                    </div>
                }
                <!--Form End-->

            </div>
        </div>
    </div>
</div>

@section scripts{ 
<script src="~/Scripts/ATS/ExistenceChecking.js"></script>
}