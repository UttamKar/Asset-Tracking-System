@using PagedList;
@using PagedList.Mvc;
@model IPagedList<ATS.Models.Models.EntityModel.Vendor>

@{
    ViewBag.Title = "Index";
}



<div class="container-fluid">
    <div class="form-horizontal">
        <br />
        <div class="panel panel-primary">
            <div class="panel panel-heading">Vendor List</div>
            <div class="panel-body">
                <div align="right">
                    @Html.ActionLink("Search", "Search", "Vendors", new { @class = "btn btn-info" })
                    @Html.ActionLink("Create New", "Create", "Vendors", new {@class = "btn btn-success"})
                </div>
                <hr />

                <div>
                    <table class="table table-striped table-hover table-bordered text-center">
                        <tr style="background-color: lightgreen; color: white">
                            <th>#</th>
                            <th>
                                Name
                            </th>
                            <th>
                                Short Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Contact No.
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Comments
                            </th>
                            <th>Action</th>
                        </tr>
                        @{
                            var serialNo = 0;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(++serialNo)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShortName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Comments)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", "Vendors", new {id = item.Id}, new {@class = "btn btn-success btn-xs"})
                                    @Html.ActionLink("Details", "Details", "Vendors", new {id = item.Id}, new {@class = "btn btn-info btn-xs"})
                                    @Html.ActionLink("Delete", "Delete", "Vendors", new {id = item.Id}, new {@class = "btn btn-danger btn-xs"})
                                </td>
                            </tr>
                        }
                    </table>
                    @Html.PagedListPager(Model, page=> Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>

