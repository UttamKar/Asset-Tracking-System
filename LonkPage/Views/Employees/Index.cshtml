@model IEnumerable<ATS.Models.Models.EntityModel.Employee>

@{
    ViewBag.Title = "Index";
}



<div class="container-fluid">

    <br />
    <div class="panel panel-primary">
        <div class="panel panel-heading">Employee List</div>
        <div class="panel-body">
            <div align="right">
                @Html.ActionLink("Search", "Search", "Employees", new { @class = "btn btn-info" })
                @Html.ActionLink("Create New", "Create", "Employees", new {@class = "btn btn-success"})
            </div>
            <hr />
            <div>
                <table class="table table-striped table-hover table-bordered text-center">
                    <tr style="background-color: lightgreen; color: white">
                        <th>#</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                        <th>
                            Organization
                        </th>
                        <th>
                            Branch
                        </th>
                        <th>
                            First Name
                        </th>
                        <th>
                            Last Name
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                Contact No
                            </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.Department)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.Designation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th>Action</th>
                    </tr>
                    @{
                        var serialNo = 0;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(++serialNo)</td>
                            <td>
                                <img width="50" height="50" src="@Html.DisplayFor(modelItem => item.Image)" alt="Image not abailable" class="img-circle" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Branch.Organization.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Branch.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Department)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.Designation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Employees", new { id = item.Id }, new { @class = "btn btn-success btn-xs" })
                                @Html.ActionLink("Details", "Details", "Employees", new { id = item.Id }, new { @class = "btn btn-info btn-xs" })
                                @Html.ActionLink("Delete", "Delete", "Employees", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
